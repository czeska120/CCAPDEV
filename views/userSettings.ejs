<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); -%>
    <title>User Settings</title>
</head>
<body>
    <header>
        <%- include('partials/sidebar'); -%>
    </header>
    <main>
        <%- include('partials/searchbar'); -%>
    <div>
    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="profile-nav col-md-3">
                <div class="panel">
                    <div class="user-heading round">
                        <a href="#">
                            <img id="image" style="object-fit:cover;" src="images/<%=accounts.image%>" alt="display picture" onerror="standby()">
                        </a>
                        <form action="/saveSettings" method="POST" enctype="multipart/form-data">
                         <button class="btn btn" type="button" style="background:#3551a3; font-size:11px;">
                               <i class="fa fa-fw fa-camera" style="color:white;"></i>
                                <input type="file" name="image" id="actual-btn" hidden/>
                                <label for="actual-btn" style="color: white;">Change Photo</label>
                                <input type="submit" value="Save">
                            </button>

                        <h1 class="pt-sm-2 pb-1 mb-0 text-nowrap"> <%= accounts.fullName.firstName %> <%= accounts.fullName.lastName %></h1>

                    </div>
                </div>
            </div>

                <div class="profile-info col-md-9">
                    <div class="panel">
                        <div class="bio-graph-heading">
                                Profile Setting
                            </div>
                        <div class="panel-body bio-graph-info">
                            <div class="row">
                                    <div class="bio-row" style="margin-left:10px;">
                                        <br>
                                        <label>Last Name</label>
                                        <input class="form-control" type="text" name="lastName" placeholder="Last Name" value= <%= accounts.fullName.lastName %>>
                                    </div>
                                    <div class="bio-row" style="margin-left:10px;">
                                        <label>First Name</label>
                                        <input class="form-control" type="text" name="firstName" placeholder="First Name" value= <%= accounts.fullName.firstName %>>
                                    </div>
                                    <div class="bio-row" style="margin-left:10px;">
                                        <div class="form-group">
                                            <label>My Bio</label>
                                                <textarea name="bio" class="form-control" rows="5"><%= accounts.biography %></textarea>
                                        </div>
                                    </div>

                                    <div class="bio-row" style="margin-left:10px;">
                                        <br>
                                        <label>Username</label>
                                        <input name="username" class="form-control" type="text" placeholder="username" value=<%= accounts.userName %>>
                                    </div>
                                    <div class="bio-row form-group small text-muted" style="margin-left:10px;">
                                        After changing your username, your old username becomes available for anyone else to claim.
                                    </div>
        
                                    <div class="bio-row" style="margin-left:10px;">
                                    <label>Email</label>
                                    <input name="email" class="form-control" type="text" placeholder="user@example.com" value=<%= accounts.email %>>
                                    </div>
        
                                    <div class="bio-row" style="margin-left:10px;">
                                        <label>New Password</label>
                                        <input name="password" class="form-control" type="password" placeholder="••••••" value=<%= accounts.password %>>
                                    </div>
        
                                    <div class="bio-row" style="margin-left:10px;">
                                        <button type="submit" class="btn btn-primary" style="background:#3551a3;">Update Profile</button>
                                    </div>
                                    &nbsp;
                                    </div>
                                
                            </div>
                    </div>

                    </div>
                </div>
            </div>
        <br>
        </div>
    </div>
    <script>
        function standby() {
        document.getElementById('image').src ="images/user.png"
        }
    </script>
    </main>
    <%- include('partials/footer'); -%>
</body>
</html>
